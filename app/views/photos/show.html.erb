<div class="row">
  <div class="span8"><%= image_tag @photo.image_url(:large).to_s %></div>
  <div class="span4">
    <h4><%= @photo.title %></h4>
    <hr>
    <p>
    <%= raw @photo.tag_list.map { |t| link_to t, tag_path(t)}.join(' ') %>
    <% if admin_signed_in? %>
     | <%= link_to 'Edit', edit_photo_path(@photo) %> |
      <%= link_to 'Back', photos_path %> | <%= link_to 'Destroy', @photo, confirm: 'Are you sure?', method: :delete %>
    <% end %>
    </p>
  </div>
</div>